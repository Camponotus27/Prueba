<p id="notice"><%= notice %></p>

<h1>Profesions</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th>Servicio</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profesions.each do |profesion| %>
      <tr>
        <td><%= profesion.nombre %></td>
        <td><%= profesion.descripcion %></td>
        <td><%= profesion.servicio %></td>
        <td><%= link_to 'Show', profesion %></td>
        <td><%= link_to 'Edit', edit_profesion_path(profesion) %></td>
        <td><%= link_to 'Destroy', profesion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

