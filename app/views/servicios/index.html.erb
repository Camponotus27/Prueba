                                     <%= button_to "Nuevo",new_servicio_path, :method => :get , class: "w3-button w3-border w3-green w3-hover-blue boton_padding" %> 

                                       
                                  
                                </div>

                                 <div class="col-xs-2  ">
                             
                                        <% if current_user.permiso == "cliente"%>

                                     <%= button_to "Atrás", cliente_indexprincipal_path, :method => :get , class: "w3-button w3-border w3-green w3-hover-blue boton_padding" %> 


                                    <% end %>

                                   <% if current_user.permiso == "profesional"%>
                                     
                                        <%= button_to "Atrás", profesional_indexprincipal_path, :method => :get , class: "w3-button w3-border w3-green w3-hover-blue boton_padding" %> 
                                      
                                   <% end %>

                                   <% if current_user.permiso == "administrador"%>

                                      <%= button_to "Atrás", administrador_indexprincipal_path, :method => :get , class: "w3-button w3-border w3-red w3-hover-blue boton_padding" %>
                          
                                   <% end %>

