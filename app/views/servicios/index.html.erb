
 <div class="w3-container" style="margin-bottom: 14px ; background-color:rgba(255,255,255,0.6);">

          <h1>Servicios</h1>

          <table>
            <thead>
              <tr>
                <th>Nombre</th>
                <th>Tarifa</th>
                <th colspan="2"></th>
              </tr>
            </thead>

            <tbody>
              <% @servicios.each do |servicio| %>
                <tr>
                  <td><%= servicio.nombre %></td>
                  <td><%= servicio.tarifa %></td>
                  <td><%= link_to 'Edit', edit_servicio_path(servicio) %></td>
                  <td><%= link_to 'Destroy', servicio, method: :delete, data: { confirm: 'Seguro que quieres eliminar el servicio?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>

          <br>



              <div class="row  around-xs">
